alias l='ls -GFh'
alias tree="find . -print | sed -e 's;[^/]*/;|____;g;s;____|; |;g'"
alias devenv='source $HOME/repos/venv/bin/activate'
alias aliases="awk '!/aliases/ && /alias/' $HOME/.alias"
alias git_token='echo $(pass github/token) | xclip'
alias tpr='tput reset'
alias clip='xclip -sel clipboard'
alias texautoinstall="sudo dnf install \$( cat *.tex | sed -n 's/^[^%]*\\usepackage[^{]*{\([^}]*\)}.*\$/tex\(\1.sty\)/p' | paste -sd ' ' - )"
alias src='source ~/.bashrc'
alias docker='podman'
alias docker-compose='podman-compose'
alias ssh='kitty +kitten ssh'
alias icat="kitty +kitten icat"
alias weather="curl v2.wttr.in/Buenos_Aires"
