# sudo grub2-mkconfig -o /boot/efi/EFI/fedora/grub.cfg
GRUB_TIMEOUT=5
GRUB_DISTRIBUTOR="$(sed 's, release .*$,,g' /etc/system-release)"
GRUB_DEFAULT=saved
GRUB_DISABLE_SUBMENU=true
GRUB_TERMINAL_OUTPUT="console"
GRUB_CMDLINE_LINUX="resume=/dev/mapper/fedora_localhost--live-swap rd.lvm.lv=fedora_localhost-live/root rd.lvm.lv=fedora_localhost-live/swap nomodeset rhgb quiet splash acpi_override=1"
GRUB_DISABLE_RECOVERY="true"
GRUB_ENABLE_BLSCFG=truei
GRUB_GFXMODE=1920x1440